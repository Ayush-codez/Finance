# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
APP_NAME=Loan Management System
APP_VERSION=1.0.0
LOG_LEVEL=info

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=5000
HOST=0.0.0.0

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB (Primary Database)
MONGODB_URI=mongodb://admin:adminpassword@localhost:27017/loan_management?authSource=admin

# SQLite (Fallback Database)
SQLITE_PATH=./database/loan_applications.db

# Database Connection Settings
DB_CONNECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000
DB_MAX_POOL_SIZE=10
DB_RETRY_WRITES=true
DB_RETRY_READS=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-please
JWT_EXPIRY=24h

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-please
CSRF_SECRET=your-csrf-secret-key

# Password Hashing
BCRYPT_ROUNDS=12

# ==============================================
# API CONFIGURATION
# ==============================================
API_VERSION=v1
API_TIMEOUT=10000
API_MAX_RETRIES=3

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# ==============================================
# EXTERNAL SERVICES CONFIGURATION
# ==============================================

# Plaid (Financial Data)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox

# Alpha Vantage (Market Data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# RapidAPI (Loan Data)
RAPIDAPI_KEY=your-rapidapi-key

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Slack Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url

# ==============================================
# ANALYTICS CONFIGURATION
# ==============================================
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=5000

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# Segment
SEGMENT_WRITE_KEY=your-segment-write-key

# ==============================================
# DOCKER CONFIGURATION
# ==============================================

# MongoDB Docker Settings
MONGO_ROOT_PASSWORD=adminpassword
MONGO_PORT=27017

# Redis Docker Settings
REDIS_PORT=6379

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Enable specific features in development
ENABLE_DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_PROFILING=false

# Development Database (if different)
DEV_MONGODB_URI=mongodb://localhost:27017/loan_management_dev

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================

# These should be overridden in production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/loan_management
# JWT_SECRET=very-secure-production-jwt-secret
# SESSION_SECRET=very-secure-production-session-secret
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Application Monitoring
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Log Configuration
# LOG_FILE_PATH=./logs/application.log
# LOG_MAX_SIZE=20m
# LOG_MAX_FILES=14

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable features
ENABLE_LOAN_SCRAPING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_ADVANCED_ANALYTICS=true