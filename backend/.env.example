# Database Configuration
MONGODB_URI=mongodb://localhost:27017/loan_management
DB_PATH=./database/loan_applications.db

# For MongoDB Atlas (cloud), use this format:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/loan_management

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Security
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# REAL-TIME DATA SOURCES CONFIGURATION
# ==============================================

# Government APIs (Free/Open Data)
# India Data.gov.in API - Register at https://data.gov.in/
INDIA_DATA_GOV_API_KEY=your_india_data_gov_api_key
INDIA_DATA_GOV_BASE_URL=https://api.data.gov.in/resource

# US SBA API - No key required for basic access
# https://www.sba.gov/api/
USA_SBA_API_BASE=https://api.sba.gov

# UK Government APIs
UK_GOV_API_BASE=https://www.gov.uk/api

# Financial Data APIs (Paid)
# Alpha Vantage - Get free API key at https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# RapidAPI - Sign up at https://rapidapi.com/
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST=loan-data-api.p.rapidapi.com

# Plaid API - Register at https://plaid.com/
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Web Scraping Configuration
SCRAPING_RATE_LIMIT=30
SCRAPING_TIMEOUT=10000
SCRAPING_USER_AGENT=LoanCompare-Bot/1.0

# Cache Configuration
# Redis for caching (optional - falls back to file cache)
REDIS_URL=redis://localhost:6379
CACHE_EXPIRY_HOURS=24

# Data Refresh Schedule (cron format)
# Default: Daily at 2 AM
DATA_REFRESH_SCHEDULE=0 2 * * *

# API Rate Limits (requests per day)
ALPHA_VANTAGE_DAILY_LIMIT=500
RAPIDAPI_DAILY_LIMIT=1000
INDIA_DATA_GOV_DAILY_LIMIT=1000

# Enable/Disable specific data sources
ENABLE_INDIA_DATA_GOV=true
ENABLE_USA_SBA=true
ENABLE_ALPHA_VANTAGE=false
ENABLE_RAPIDAPI=false
ENABLE_WEB_SCRAPING=true

# Monitoring & Alerts
# Email notifications for API failures
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=admin@loancompare.com

# Webhook URL for Slack/Discord notifications
WEBHOOK_URL=your_webhook_url

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/api_integration.log
